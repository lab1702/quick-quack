# Environment configuration for DuckDB Macro REST Server
# Copy this file to .env and customize for your environment

# Database Configuration
DUCKDB_REST_DATABASE_PATH=data/database.duckdb
DUCKDB_REST_READ_ONLY=true

# Server Configuration
DUCKDB_REST_HOST=0.0.0.0
DUCKDB_REST_PORT=8000
DUCKDB_REST_WORKERS=4

# Performance Settings
DUCKDB_REST_CONNECTION_TIMEOUT=30
DUCKDB_REST_QUERY_TIMEOUT=300
DUCKDB_REST_MAX_RESULT_SIZE=10000

# API Settings
DUCKDB_REST_API_PREFIX=/api/v1
DUCKDB_REST_TITLE=DuckDB Macro REST Server
DUCKDB_REST_DESCRIPTION=RESTful server that exposes DuckDB macros as HTTP endpoints
DUCKDB_REST_VERSION=1.0.0

# Logging Configuration
DUCKDB_REST_LOG_LEVEL=INFO
DUCKDB_REST_JSON_LOGGING=true

# Production Settings
DUCKDB_REST_ENVIRONMENT=development

# Monitoring (for production)
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
PROMETHEUS_RETENTION=30d

# Security (for production)
# DUCKDB_REST_CORS_ORIGINS=https://yourdomain.com
# DUCKDB_REST_API_KEY=your_api_key_here

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
